{
    "name": "Random Agent Spoofer WebExt",
    "short_name": "RAS WebExt",
    "description": "Allows the use of various browser profiles (including useragent ,platform, oscpu, accept headers and other options), which it can randomly switch between after a chosen period of time has expired",
    "manifest_version": 2,
    "version": "0.1",

    "icons": {
        "48": "data/images/icon.png"
    },
    
    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "16": "images/spoof.png",
            "32": "images/spoof32.png",
            "64": "images/spoof64.png"
        },
        "default_title": "Random Agent Spoofer WebExt",
        "default_popup": "popup/popup.html"
    },

    "options_ui": {
        "page": "options/options.html"
    },

    "permissions": ["<all_urls>", "storage", "webRequest", "webRequestBlocking", "experiments.preferences", "preferences"]
}
